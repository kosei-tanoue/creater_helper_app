<div class="requests-wrapper">
  <div class="search">
    <%= form_with(url: search_requests_path, local: true, method: :get, class: "search-form") do |form| %>
      <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" %>
      <%= form.submit "検索", class: "search-btn" %>
    <% end %>
  </div>
  <div class="requests">
    <% @requests.each do |request| %>
      <div class="request">
        <div class="request-title">
          <h3><%= link_to "#{request.title}", request_path(request.id) %></h2>
        </div>
        <div class="main-text">
          <div class="request-text">
            <p><strong>Request</strong><br><%= request.text %></p>
          </div>
          <div class="request-name">
          <a href="/users/<%= request.user.id %>">
            <p><strong>投稿者</strong>  <%= request.user.nickname %></p>
          </a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="push"></div>

